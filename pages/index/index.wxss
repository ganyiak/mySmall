/**index.wxss**/
.banner-container {
  width: 100%;
  height: 278rpx;
  top: 0;
}
.banner {
  width: 100%;
  height: 100%;
}
.person-info {
  position: absolute;
  color: #fff;
  top: 88rpx;
  left: 120rpx;
  font-size: 30rpx;
}
.btn_fill {
  width: 164rpx;
  height: 50rpx;
  border: 2rpx solid #fff;
  text-align: center;
  line-height: 50rpx;
  border-radius: 20rpx;
}
.person-info text {
  position: relative;
  top: 20rpx;
}
.activity_box {
  margin-top: 40rpx;
  display: flex;
  justify-content: space-around;
}
.daily_task, .big_wheel {
  width: 334rpx;
  height: 128rpx;
  background: #fff;
  position: relative;
  border-radius: 40rpx;
}
.daily_task image {
  width: 34rpx;
  height: 42rpx;
  position: absolute;
  top: 40rpx;
  left: 40rpx;
}
.big_wheel image {
  width: 48rpx;
  height: 48rpx;
  position: absolute;
  top: 40rpx;
  left: 40rpx;
}
.daily_task text, .big_wheel text {
  font-size: 36rpx;
  position: absolute;
  left: 126rpx;
  top: 40rpx;
}
.share_task{
  padding: 50rpx 32rpx 0 32rpx;
}
.share_task .title {
  font-size: 30rpx;
}
.share_task .title_list{
  background: #fff;
}
.title_list {
  margin-top: 34rpx;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
}
.title_list scroll-view {
  height: 556rpx;
}
.list {
  border-bottom: 2rpx solid #f2f2f2;
  padding: 30rpx 0 30rpx 32rpx;
}
.list_title {
  font-size: 32rpx;
}
.list_time {
  font-size: 32rpx;
  display: block;
}